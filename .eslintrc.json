{
  "parser": "@babel/eslint-parser",
  "env": {
    "es2020": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "requireConfigFile": false
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      4,
      { "SwitchCase": 1 }
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-console": "off",
    "no-prototype-builtins": "off"
  }
}
